@model OnlineShoopingApp.ViewModel.AdminDashboardViewModel

<script>
    var chartData = @Html.Raw(Model.MonthChartData);

    var monthChartOptions = {
        series: [{
            name: "Profit",
            data: chartData
        }],
        chart: {
            height: 350,
            type: 'line',
            zoom: {
                enabled: false
            }
        },
        dataLabels: {
            enabled: false
        },
        stroke: {
            curve: 'straight'
        },
        title: {
            text: 'Month-Wise profit',
            align: 'left'
        },
        grid: {
            row: {
                colors: ['#f3f3f3', 'transparent'], // takes an array which will be repeated on columns
                opacity: 0.5
            },
        },
        xaxis: {
            categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
        }
    };

    var monthChart = new ApexCharts(document.querySelector("#monthChart"), monthChartOptions);
    monthChart.render();
</script>