@model OnlineShoopingApp.ViewModel.AdminDashboardViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<button class="btn btn-link">
    @Html.ActionLink("Customer View Page", "ViewCustomer", "Admin")
</button>
<button class="btn btn-link">
    @Html.ActionLink("Suplier View Page", "ViewSupliers", "Admin")
</button>
<button class="btn btn-link">
    @Html.ActionLink("Category View Page", "ViewCategories", "Admin")
</button>
<button class="btn btn-link">
    @Html.ActionLink("Product View Page", "ViewProducts", "Admin")
</button>

<div id="monthChart"></div>

<script>
    var monthChartOptions = {
        series: [{
            name: "Profit",
            data: [10, 41, 35, 51, 49, 62, 69, 91, 148]
        }],
        chart: {
            height: 350,
            type: 'line',
            zoom: {
                enabled: false
            }
        },
        dataLabels: {
            enabled: false
        },
        stroke: {
            curve: 'straight'
        },
        title: {
            text: 'Month-Wise profit',
            align: 'left'
        },
        grid: {
            row: {
                colors: ['#f3f3f3', 'transparent'], // takes an array which will be repeated on columns
                opacity: 0.5
            },
        },
        xaxis: {
            categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep'],
        }
    };

    var monthChart = new ApexCharts(document.querySelector("#monthChart"), monthChartOptions);
    monthChart.render();
</script>